# Base Environment Configuration Template
# Copy this file to create environment-specific configurations

# Environment Type
TEST_ENV=staging1  # Options: local, sit1, uat1, staging1, production

# URLs
BASE_URL=https://buggy.justtestit.org

# Test Users
DEFAULT_USERNAME=default_tester
DEFAULT_PASSWORD=Test123!
ADMIN_USERNAME=admin_user
ADMIN_PASSWORD=Admin123!

# Test Execution
DEFAULT_TIMEOUT=60000
NAVIGATION_TIMEOUT=30000
ELEMENT_TIMEOUT=10000
NETWORK_TIMEOUT=5000

# Browser Settings
BROWSER=chromium  # Options: chromium, firefox, webkit
HEADLESS_MODE=false

# Test Configuration
ENABLE_SCREENSHOTS=true
ENABLE_VIDEO_RECORDING=false
SCREENSHOT_PATH=./test-results/screenshots
VIDEO_PATH=./test-results/videos

# API Settings
API_TIMEOUT=5000
API_RETRY_ATTEMPTS=3

# Reporting
ENABLE_HTML_REPORT=true
ENABLE_JSON_REPORT=true
REPORT_PATH=./test-results/reports