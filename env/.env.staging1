# Staging1 Environment Configuration
TEST_ENV=staging1

# URLs
BASE_URL=https://staging1.buggy.justtestit.org

# Test Users
DEFAULT_USERNAME=staging1_tester
DEFAULT_PASSWORD=Staging1Test123!
ADMIN_USERNAME=staging1_admin
ADMIN_PASSWORD=Staging1Admin456!

# Test Execution
DEFAULT_TIMEOUT=60000
NAVIGATION_TIMEOUT=30000
ELEMENT_TIMEOUT=10000
NETWORK_TIMEOUT=5000

# Browser Settings
BROWSER=chromium
HEADLESS_MODE=false

# Test Configuration
ENABLE_SCREENSHOTS=true
ENABLE_VIDEO_RECORDING=true
SCREENSHOT_PATH=./test-results/staging1/screenshots
VIDEO_PATH=./test-results/staging1/videos

# API Settings
API_TIMEOUT=8000
API_RETRY_ATTEMPTS=2

# Performance Testing
PERFORMANCE_THRESHOLD_LOAD=3000
PERFORMANCE_THRESHOLD_RESPONSE=1000
ENABLE_PERFORMANCE_METRICS=true

# Reporting
ENABLE_HTML_REPORT=true
ENABLE_JSON_REPORT=true
REPORT_PATH=./test-results/staging1/reports