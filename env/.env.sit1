# SIT1 Environment Configuration
TEST_ENV=sit1

# URLs
BASE_URL=https://sit1.buggy.justtestit.org

# Test Users
DEFAULT_USERNAME=sit1_tester
DEFAULT_PASSWORD=Sit1Test123!
ADMIN_USERNAME=sit1_admin
ADMIN_PASSWORD=Sit1Admin456!

# Test Execution
DEFAULT_TIMEOUT=120000
NAVIGATION_TIMEOUT=60000
ELEMENT_TIMEOUT=20000
NETWORK_TIMEOUT=10000

# Browser Settings
BROWSER=chromium
HEADLESS_MODE=true

# Test Configuration
ENABLE_SCREENSHOTS=true
ENABLE_VIDEO_RECORDING=false
SCREENSHOT_PATH=./test-results/sit1/screenshots
VIDEO_PATH=./test-results/sit1/videos

# API Settings
API_TIMEOUT=15000
API_RETRY_ATTEMPTS=5

# Test Data
MOCK_SERVICES=payment,email
TEST_DATA_PATH=./test-data/sit1
CLEANUP_DATA=true

# Reporting
ENABLE_HTML_REPORT=true
ENABLE_JSON_REPORT=true
REPORT_PATH=./test-results/sit1/reports