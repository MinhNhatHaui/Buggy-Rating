# Environment Configuration Template
# Copy this file to create your environment-specific .env files
# DO NOT commit actual credentials to the repository

TEST_ENV=staging1

# URLs
BASE_URL=https://buggy.justtestit.org

# Test Users - REPLACE WITH ACTUAL CREDENTIALS
DEFAULT_USERNAME=your_username_here
DEFAULT_PASSWORD=your_password_here
ADMIN_USERNAME=admin_username_here
ADMIN_PASSWORD=admin_password_here

# Test Execution
DEFAULT_TIMEOUT=60000
NAVIGATION_TIMEOUT=30000
ELEMENT_TIMEOUT=10000
NETWORK_TIMEOUT=5000

# Browser Settings
BROWSER=chromium
HEADLESS_MODE=false

# Test Configuration
ENABLE_SCREENSHOTS=true
ENABLE_VIDEO_RECORDING=true
SCREENSHOT_PATH=./test-results/screenshots
VIDEO_PATH=./test-results/videos

# API Settings
API_TIMEOUT=10000
API_RETRY_ATTEMPTS=3

# Reporting
ENABLE_HTML_REPORT=true
ENABLE_JSON_REPORT=true
REPORT_PATH=./test-results/reports
